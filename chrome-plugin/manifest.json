{
  "manifest_version": 2,
  
  "name": "ChristmasNotify",
  "description": "just for fun",
  "version": "0.0.1",

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "browser_action": {
    "default_icon": "Liu.png",
    "default_popup": "popup.html",
    "default_title": "Master Liu"
  },
  "permissions": [
    "activeTab",
    "storage",
    "notifications",
    "https://www.google.com/*",
    "https://api.zhihu.com/*",
    "https://www.zhihu.com/*",
    "http://127.0.0.1:8000/*"
  ],
  "web_accessible_resources": [
    "Liu.png"
  ]
}